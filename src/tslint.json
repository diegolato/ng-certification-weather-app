{
  "extends": "../tslint.json",
  "defaultSeverity": "warning",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "variable-name": [true, "ban-keywords", "check-format"],
    "no-string-literal": false,
    "skipBlankLines": true,
    "ignoreComments": true,
    "object-literal-key-quotes": [
      true,
      "consistent"
    ],
    "quotemark": [
      false,
      "single",
      "double"
    ]
  }
}
